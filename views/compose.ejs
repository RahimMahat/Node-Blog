<%- include('partials/header'); -%>


<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label for="title">Title </label>
    <input name="postTitle" type="text" class="form-control" autocomplete="Off"  placeholder="Enter title">
  </div>
  <div class="form-group">
    <label for="">Post</label>
    <textarea name="postBody" class="form-control"rows="3" placeholder="Your post body here"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>


